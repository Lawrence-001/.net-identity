@model RegistrationVM;
@{
    ViewBag.Title = "User registration";
}

<div class="row">
    <div class="container-fluid col-lg-4 col-md-6 col-sm-7">
       
        <form method="post" asp-action="Register" asp-controller="Auth">
            @if (TempData["Successful"] != null)
            {
                <div class="alert alert-info alert-dismissible" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    @TempData["Successful"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="FName"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="LName"></label>
                <input asp-for="LName" class="form-control" />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="john@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div><br />
            <div>
                <button type="submit" class="btn btn-outline-success mb-2" asp-action="Register" asp-controller="Auth">Register</button>
            </div>
            <p> Already registered? <a asp-action="Login" asp-controller="Auth">Login here</a></p>
        </form>
    </div>

</div>