@{
    ViewData["Title"] = "Error";
}

@if (ViewBag.ErrorTitle == null)
{
    <h3 class="text-center text-danger">
        An Error occured while processing your request.
        <h5 class="text-center">In case any urgent, please contact us on malelulawrence@gmail.com</h5>
    </h3>
}
else
{
    <h5 class="text-center text-danger">@ViewBag.ErrorTitle</h5>
    <h5 class="text-center">@ViewBag.ErrorMessage</h5>
}

