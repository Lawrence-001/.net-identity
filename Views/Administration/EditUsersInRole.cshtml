@model List<UserRoleVm>
@{
    var roleId = ViewBag.roleId;
}

<h4 class="text-center">Edit Users InRole</h4>

<div class="row">
    <div class="container-fluid justify-content-center col-lg-7 col-md-6">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Role: @ViewBag.RoleName</h5>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Add or remove users from this role</h4>

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input hidden asp-for="@Model[i].UserId" />
                            <input hidden asp-for="@Model[i].Email" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].Email
                            </label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    @* <form method="post">
                    <button type="submit" class="btn btn-primary"
                    asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@roleId">
                    Update
                    </button>
                    </form> *@
                    @*  <button type="submit" class="btn btn-primary"
                    asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@roleId">
                    Update
                    </button> *@
                    <input type="submit" value="Update" class="btn btn-primary" />

                    <a class="btn btn-secondary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

