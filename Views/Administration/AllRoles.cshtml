<script>
    function ConfirmDelete(roleId, isTrue) {
        var deleteSpan = 'deleteSpan_' + roleId;
        var confirmDeleteSpan = 'confirmDeleteSpan_' + roleId;

        if (isTrue) {
            $('#' + deleteSpan).hide();
            $('#' + confirmDeleteSpan).show();
        }
        else {
            $('#' + deleteSpan).show();
            $('#' + confirmDeleteSpan).hide();
        }
    }
</script>