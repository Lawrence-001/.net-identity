@model EditProductVM

@{
    ViewData["Title"] = "EditProduct";
}

<h1 class="text-center">Edit Product</h1>
<div class="row">
    <div class="container-fluid col-sm-8 col-md-7 col-lg-6">
        <form asp-action="EditProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div><br />
            <div>
                <button type="submit" asp-action="EditProduct" asp-controller="Home" class="btn btn-outline-primary"> Update</button>
                <a asp-action="index" asp-controller="Home" class="btn btn-outline-info float-right">Cancel</a>
            </div>
        </form>
    </div>
</div>



